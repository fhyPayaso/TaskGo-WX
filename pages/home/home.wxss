.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  background-image: url('http://p0y1qzu73.bkt.clouddn.com/17-12-27/19933858.jpg');
  margin: 0px;
  background-size: 100% 100%;
}

.btn_release, .btn_order, .btn_accept {
  width: 500rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  opacity: 0.65;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed; /*定位方式：绝对定位*/
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.1; /*透明度*/
  overflow: hidden; /*当内容溢出处理方式，还可以为scroll*/
  z-index: 1000; /*层叠优先级*/
}

.modal-dialog {
  width: 90%;
  height: 50%;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 1001;
  background: #f9f9f9;
  border-radius: 36rpx;
  opacity: 0.8;
  display: flex; /*弹性布局*/
  align-items: center;
}

.dialog_container {
  width: 80%;
  height: 80%;
  margin: auto;
  display: flex;
  flex-direction: column;
}

/*宿舍号*/

.dialog_number {
  width: 100%;
  display: flex;
  flex-direction: row;
}

/*取水形式*/

.dialog_form {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
}

.btn_send, .btn_self {
  width: 150rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

/*钱数*/

.dialog_money {
  margin-top: 70rpx;
  margin-bottom: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

/*提交*/

.dialog_confirm {
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.btn_cofirm {
  width: 150rpx;
  height: 70rpx;
  background: blue;
  margin-right: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
